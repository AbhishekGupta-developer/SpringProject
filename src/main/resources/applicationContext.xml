<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="courseBean" class="com.myorganisation.beans.Course">
        <constructor-arg value="1" />
        <constructor-arg value="Java Fullstack" />
        <constructor-arg value="100000.0D" />
    </bean>

    <bean id="studentBean" class="com.myorganisation.beans.Student">
        <constructor-arg value="1" />
        <constructor-arg value="Abhishek" />
        <constructor-arg ref="courseBean" />
    </bean>

</beans>